    // windows only
    "terminal.integrated.shell.windows": 
        "C:\\Users\\11704\\AppData\\Local\\Microsoft\\WindowsApps\\ubuntu1804.exe",
    
    "editor.suggestSelection": "first",
    "editor.insertSpaces": true,
    "editor.renderIndentGuides": true,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "all",
    "editor.fontSize": 18,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true,
    },

    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#333333",
        "activityBar.activeBackground": "#1b9c9c",
        "breadcrumb.background": "#1a3a3d",
        "badge.background": "#6f9408",
        "tab.activeBackground": "#30795a",
    },
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.indent": 20,


    // File Association
    //modern fortran -- extension 
    "files.associations": {
        "*.csh": "shellscript",
        "*.f":"fortran_fixed-form",
    },
    "[fortran_fixed-form]": {
        "editor.tabSize": 3,
        "editor.rulers": [5,6,72,80],
        //"editor.renderIndentGuides": false,
    },
    "[html]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 2,
    },


    //code-runner exculsively for Windows
    "code-runner.executorMap": {
        "fortran_fixed-form": "cwd='$dir' && cwd=${cwd//\\\"/} && cwd=${cwd//\\\\/\/} && d=${cwd%:*} && p=${cwd#*:} && cd \"/mnt/${d}${p}\" && f77 $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt",
        "java": "cwd='$dir' && cwd=${cwd//\\\"/} && cwd=${cwd//\\\\/\/} && d=${cwd%:*} && p=${cwd#*:} && cd \"/mnt/${d}${p}\" && javac.exe $fileName && CLASSPATH=$CLASSPATH:$workspaceRoot; java.exe $fileNameWithoutExt",
        "c": "cwd='$dir' && cwd=${cwd//\\\"/} && cwd=${cwd//\\\\/\/} && d=${cwd%:*} && p=${cwd#*:} && cd \"/mnt/${d}${p}\" && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "python": "python.exe",
    },


    // Language python -- extension
    "python.pythonPath": "C:/python/python.exe",
    "python.languageServer": "Microsoft",
    "code-runner.runInTerminal": true,


    //matlab
    //"matlab.matlabpath": "/usr/local/MATLAB/R2016b/bin/matlab",
    //"matlab.mlintpath": "/usr/local/MATLAB/R2016b/bin/glnxa64/mlint",


    "explorer.confirmDelete": false,
    "update.mode": "manual",
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "vsicons.dontShowNewVersionMessage": true,
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.ignoreRecommendations": false,
    "workbench.iconTheme": "vscode-icons",
    "indentRainbow.excludedLanguages": [
        "plaintext",
        "html",
        "fortran_fixed-form",
        "log",
    ],
    "indentRainbow.colors": [
        "rgba(255,255,64,0.07)",
        "rgba(127,255,127,0.07)",
        "rgba(255,127,255,0.07)",
        "RGBA(162,0,1,0.07)",
    ],

    "java.home": "C:\\Program Files\\AdoptOpenJDK\\jdk-11.0.8.10-hotspot",

    
    //"liveServer.settings.CustomBrowser": "chrome",
    "liveServer.settings.useBrowserPreview": true,
    "liveServer.settings.donotShowInfoMsg": true,

    "java.semanticHighlighting.enabled": true,

    "bracketPairColorizer.colorMode": "Consecutive",
    "bracketPairColorizer.consecutivePairColors":[
        "()",
        "[]",
        "{}",
        [
            "LightSkyBlue",
            "Gold",
            "Orchid",
        ],
        "Red"
    ],
    "git.ignoreMissingGitWarning": true,

    "emmet.includeLanguages": {
        "liquid": "html",


    },

    // title bar setting
    "window.title": "${activeEditorLong}",


    // liveServer
    "liveServer.settings.root": "/_site_original",

    "code-eol.style": {"color": "#fbb613", "opacity":0.3, },

    "[ruby]": {
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 2,
    },

    // set all default end-of-line ending to return
    "files.eol": "\n",



}